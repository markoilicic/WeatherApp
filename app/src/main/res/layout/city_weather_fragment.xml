<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|top"
    android:orientation="vertical"
    android:padding="@dimen/general_padding">

    <RelativeLayout
        android:id="@+id/ll_city_header_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="26sp"
            tools:text="City name" />

        <ImageView
            android:id="@+id/iv_weather_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/general_spacing"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_weather_icon"
            android:layout_toRightOf="@+id/iv_weather_icon"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40sp"
            tools:text="8,9" />

        <TextView
            android:id="@+id/tv_temp_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_temperature"
            android:layout_toRightOf="@+id/tv_temperature"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/secondary_text"
            android:textSize="30sp"
            tools:text="°C" />

        <TextView
            android:id="@+id/tv_temp_range_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_temp_unit"
            android:layout_toStartOf="@+id/tv_temp_unit"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/primary_text"
            tools:text="8,5 ~ 12" />

        <TextView
            android:id="@+id/tv_temp_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="°C" />

        <TextView
            android:id="@+id/tv_weather_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Light rain" />

        <TextView
            android:id="@+id/tv_wind_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="15 m/s" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_city_days"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>